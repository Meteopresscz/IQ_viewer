   <string notr="true">/*
 * Dark Theme for IQ Spectrum Analyzer
 * ===================================
 * A modern, dark theme for better focus on the data visualization.
 */

QWidget {
    background-color: #2c313a;
    color: #f0f0f0;
    border: none;
    font-family: Segoe UI, Arial, sans-serif;
    font-size: 10pt;
}

QMainWindow {
    background-color: #2c313a;
}

QToolBar {
    padding: 4px;
    spacing: 6px;
}

QToolButton {
    background-color: transparent;
    border: 1px solid transparent;
    padding: 4px;
    border-radius: 4px;
}

QToolButton:hover {
    background-color: #38414e;
    border: 1px solid #4f5b6a;
}

QToolButton:pressed {
    background-color: #4f5b6a;
}

/* === Dock Widget &amp; ToolBar === */
QDockWidget {
    titlebar-close-icon: url(:/icons/close.png); /* Example for custom icons */
    titlebar-normal-button: url(:/icons/float.png);
}

QDockWidget::title {
    background-color: #38414e;
    text-align: left;
    padding: 8px;
    font-weight: bold;
}

/* === Menu Bar === */
QMenuBar {
    background-color: #38414e;
    color: #f0f0f0;
}

QMenuBar::item {
    background-color: transparent;
    padding: 6px 12px;
}

QMenuBar::item:selected {
    background-color: #4f5b6a;
}

QMenu {
    background-color: #2c313a;
    border: 1px solid #4f5b6a;
}

QMenu::item:selected {
    background-color: #4f5b6a;
}

/* === Sliders === */
QSlider::groove:horizontal {
    border: 1px solid #4f5b6a;
    height: 4px;
    background: #38414e;
    margin: 2px 0;
    border-radius: 2px;
}

QSlider::handle:horizontal {
    background: #78a9ff;
    border: 1px solid #78a9ff;
    width: 16px;
    margin: -6px 0; 
    border-radius: 8px;
}

QSlider::handle:horizontal:hover {
    background: #9ac0ff;
}

/* === ComboBox === */
QComboBox {
    background-color: #38414e;
    border-radius: 4px;
    padding: 4px 8px;
    min-width: 6em;
}

QComboBox:on { /* shift the text when the popup opens */
    border: 1px solid #78a9ff;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left: 1px solid #4f5b6a;
}

QComboBox QAbstractItemView {
    background-color: #38414e;
    border: 1px solid #4f5b6a;
    selection-background-color: #4f5b6a;
}

/* === Status Bar === */
QStatusBar {
    background-color: #38414e;
    font-weight: bold;
}

/* === Labels &amp; GroupBox for clarity === */
QLabel {
    color: #c0c0c0;
    font-size: 9pt;
}

QGroupBox {
    border: 1px solid #4f5b6a;
    border-radius: 5px;
    margin-top: 1ex; /* leave space at the top for the title */
    font-weight: bold;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 3px;
    left: 10px;
}
</string>
